<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AnySheet.SheetModule.Primitives"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AnySheet.SheetModule.Primitives.ListPrimitive"
             x:DataType="vm:ListPrimitive">
    <UserControl.Styles>
        <StyleInclude Source="/Assets/SheetModuleStyles.axaml" />
        <Style Selector="Button">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="#Container Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource Tertiary}" />
        </Style>
    </UserControl.Styles>
    
    <Border Name="Container" Classes="Primitive" Padding="3">
        <Grid RowDefinitions="*, Auto" ColumnDefinitions="*">
            <Border BorderBrush="{DynamicResource Primary}" BorderThickness="2">
                <ScrollViewer Name="ScrollViewer">
                    <ListBox ItemsSource="{Binding Entries}" Margin="0" BorderBrush="Transparent">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="(Interaction.Behaviors)">
                                    <BehaviorCollectionTemplate>
                                        <BehaviorCollection>
                                            <ListReorderDragBehavior Orientation="Vertical" />
                                        </BehaviorCollection>
                                    </BehaviorCollectionTemplate>
                                </Setter>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="0" BorderBrush="{DynamicResource Primary}"
                                        BorderThickness="2" CornerRadius="4" Background="White">
                                    <Grid Margin="0" ColumnDefinitions="*, 25, 25" RowDefinitions="Auto">
                                        <TextBox Text="{Binding Text}"
                                                 Foreground="{DynamicResource Primary}" Padding="3 0"
                                                 FontSize="14" />
                                        <Button Grid.Column="1" Padding="0" Margin="0" Width="25" Height="20"
                                                Command="{Binding RemoveEntry}"
                                                VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                            <materialIcons:MaterialIcon Kind="Minus"
                                                                        Foreground="{DynamicResource Primary}"
                                                                        VerticalAlignment="Stretch"
                                                                        HorizontalAlignment="Stretch" />
                                        </Button>
                                        <materialIcons:MaterialIcon Grid.Column="2" Kind="ReorderHorizontal"
                                                                    Foreground="{DynamicResource Secondary}"
                                                                    VerticalAlignment="Stretch"
                                                                    HorizontalAlignment="Stretch" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Border>
            <Border Grid.Row="1" Margin="0" Padding="3" BorderBrush="Transparent">
                <Grid Margin="0" Name="NewEntryContainerGrid" ColumnDefinitions="*, 25, 25" RowDefinitions="25">
                    <TextBox Name="NewEntryTextBox" BorderThickness="0 0 0 3"
                             BorderBrush="{DynamicResource Primary}"
                             Foreground="{DynamicResource Primary}"
                             Padding="3 0" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <TextBox.KeyBindings>
                            <KeyBinding Command="{Binding NewEntryTextBoxEnterPress}" Gesture="Enter" />
                        </TextBox.KeyBindings>
                    </TextBox>
                    <Button Grid.Column="1" Click="ClearEntryButtonClick" Padding="0" Margin="0"
                            VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <materialIcons:MaterialIcon Kind="Close" Foreground="{DynamicResource Primary}"
                                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                    </Button>
                    <Button Grid.Column="2" Click="AddEntryButtonClick" Padding="0" Margin="0"
                            VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <materialIcons:MaterialIcon Kind="Plus" Foreground="{DynamicResource Primary}"
                                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
