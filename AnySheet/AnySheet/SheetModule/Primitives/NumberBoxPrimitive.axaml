<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AnySheet.SheetModule.Primitives"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AnySheet.SheetModule.Primitives.NumberBoxPrimitive"
             x:DataType="vm:NumberBoxPrimitive"
             x:Name="Control">
    <UserControl.Styles>
        <StyleInclude Source="/Assets/SheetModuleStyles.axaml" />
    </UserControl.Styles>
    
    <Border Name="Container" Classes="Primitive">
        <!-- This SHOULD be a NumericUpDown, but I spent 4 hours trying to get text sizing to work correctly and it
             didn't work, so now I'm faking the whole thing with a TextBox instead (it's really not *that* bad, the
             original NumericUpDown was just being used as a text box anyway). -->
        <TextBox Name="TextBox" Classes="NumberBox" TextChanged="TextChanged" LostFocus="LostFocus"
                 AcceptsReturn="False"  TextWrapping="NoWrap" ScrollViewer.VerticalScrollBarVisibility="Disabled" />
    </Border>
</UserControl>