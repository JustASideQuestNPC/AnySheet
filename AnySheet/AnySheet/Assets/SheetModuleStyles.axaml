<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cc="using:CCLibrary">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    <Style Selector="Border.Module">
        <Setter Property="Background" Value="White" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="BorderBrush" Value="Red"/>
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="5" />
    </Style>
    <Style Selector="Border.Primitive">
        <Setter Property="CornerRadius" Value="5"/>
    </Style>
    <Style Selector="cc|AutoFitTextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PtSerif}" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>
    <Style Selector="TextBox">
        <Setter Property="FontFamily" Value="{StaticResource PtSerif}" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="TextBox:focus-within">
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="CaretBrush" Value="Black" />
    </Style>
    <Style Selector="TextBox:pointerover">
        <Setter Property="Foreground" Value="Black" />
    </Style>
    <Style Selector="TextBox:focus-within /template/ Border">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Red" />
        <Setter Property="BorderThickness" Value="0 0 0 3" />
    </Style>
    <Style Selector="TextBox:pointerover /template/ Border">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Red" />
        <Setter Property="BorderThickness" Value="0 0 0 3" />
    </Style>
</Styles>
