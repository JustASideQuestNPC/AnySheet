<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cc="using:CCLibrary">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <Style Selector="Border.Module">
        <Setter Property="Background" Value="White" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="BorderBrush" Value="{DynamicResource Accent}"/>
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="5" />
    </Style>
    <Style Selector="Border.Primitive">
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Margin" Value="3" />
    </Style>
    
    <Style Selector="cc|AutoFitTextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PtSerif}" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="Foreground" Value="{DynamicResource Primary}" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>
    
    <Style Selector="TextBox">
        <Setter Property="FontFamily" Value="{StaticResource PtSerif}" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="Foreground" Value="{DynamicResource Primary}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
    </Style>
    <Style Selector="TextBox:focus-within">
        <Setter Property="Foreground" Value="{DynamicResource Primary}" />
        <Setter Property="CaretBrush" Value="{DynamicResource Primary}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
    </Style>
    <Style Selector="TextBox:pointerover">
        <Setter Property="Foreground" Value="{DynamicResource Primary}" />
        <Setter Property="CaretBrush" Value="{DynamicResource Primary}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
    </Style>
    <Style Selector="TextBox:focus-within /template/ Border">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="TextBox:pointerover /template/ Border">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    
    <Style Selector="TextBox.MultiLine">
        <Setter Property="Foreground" Value="{DynamicResource Primary}" />
        <Setter Property="FontFamily" Value="{DynamicResource Lato}" />
        <Setter Property="FontSize" Value="15" />
    </Style>
    
    <Style Selector="TextBox.NumberBox">
        <Setter Property="FontFamily" Value="{StaticResource Lato}" />
        <Setter Property="Foreground" Value="{DynamicResource Primary}" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="BorderBrush" Value="Transparent" />
    </Style>
    <Style Selector="TextBox.NumberBox:focus-within">
        <Setter Property="Foreground" Value="{DynamicResource Primary}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>
    <Style Selector="TextBox.NumberBox:pointerover">
        <Setter Property="Foreground" Value="{DynamicResource Primary}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>
    <Style Selector="TextBox.NumberBox:focus-within /template/ Border">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
    </Style>
    <Style Selector="TextBox.NumberBox:pointerover /template/ Border">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
    </Style>
</Styles>
