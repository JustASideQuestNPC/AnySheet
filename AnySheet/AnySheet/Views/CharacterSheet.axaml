<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AnySheet.Views"
             x:Class="AnySheet.Views.CharacterSheet"
             x:DataType="vm:CharacterSheet">
    <ZoomBorder Name="ZoomBorder" WheelBehavior="None" WheelWithShift="Zoom" EnableKeyboardNavigation="False"
                EnablePan="True">
        <Canvas Name="ModuleGrid" Background="LightGray" HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
    </ZoomBorder>
</UserControl>
