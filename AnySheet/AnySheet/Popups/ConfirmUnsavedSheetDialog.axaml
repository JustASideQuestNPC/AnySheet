<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AnySheet.Popups.ConfirmUnsavedSheetDialog">
    <UserControl.Styles>
        <StyleInclude Source="/Assets/PopupStyles.axaml" />
    </UserControl.Styles>
    <Border Classes="Container">
        <StackPanel>
            <TextBlock Name="DisplayText" Margin="5">Do you want to save this sheet?
                Unsaved changes will be lost.</TextBlock>
            <Grid RowDefinitions="Auto" ColumnDefinitions="Auto, Auto, Auto" Margin="5" ColumnSpacing="5">
                <Button Grid.Column="0" Click="SaveButtonClick">Save Sheet</Button>
                <Button Grid.Column="1" Click="DiscardButtonClick">Discard Sheet</Button>
                <Button Grid.Column="2" Click="CancelButtonClick">Cancel</Button>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
